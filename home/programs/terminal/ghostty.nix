_: {
  programs.ghostty = {
    enable = true;
    settings = {
      font-family = "Maple Mono NF";
      background-opacity = 0.7;
      window-padding-x = 16;
      window-padding-y = 16;
      window-padding-balance = true;
      resize-overlay = "never";
      clipboard-read = "allow";
      clipboard-write = "allow";
      clipboard-trim-trailing-spaces = true;
      background = "#1E222A";
    };
  };
}
